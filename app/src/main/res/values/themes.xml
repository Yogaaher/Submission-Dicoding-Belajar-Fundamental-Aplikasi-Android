<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDicodingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/gray_700</item> <!-- Warna abu-abu gelap -->
        <item name="colorPrimaryVariant">@color/gray_900</item> <!-- Warna abu-abu lebih gelap -->
        <item name="colorOnPrimary">@color/white</item> <!-- Warna teks di atas warna primer -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/gray_500</item> <!-- Warna abu-abu sedang -->
        <item name="colorSecondaryVariant">@color/gray_700</item> <!-- Warna abu-abu lebih gelap -->
        <item name="colorOnSecondary">@color/black</item> <!-- Warna teks di atas warna sekunder -->

        <!-- Background color -->
        <item name="colorSwitchThumbNormal">@color/gray_700</item>

        <item name="colorSurface">@color/white</item> <!-- Latar belakang permukaan -->
        <item name="colorOnSurface">@color/black</item> <!-- Warna teks di atas permukaan -->
        <item name="colorError">@color/red</item> <!-- Warna error -->
        <item name="colorOnError">@color/white</item> <!-- Warna teks di atas warna error -->
    </style>
</resources>
